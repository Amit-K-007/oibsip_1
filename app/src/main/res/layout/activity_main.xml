<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Units of length"
        android:minHeight="@dimen/_48sdp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometer"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Units of length"
        android:minHeight="@dimen/_48sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.07999998" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:maxLines="1"
        android:text="0"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="viewEnd"
        app:autoSizeMaxTextSize="@dimen/_28ssp"
        app:autoSizeMinTextSize="@dimen/_12ssp"
        app:autoSizeStepGranularity="@dimen/_2ssp"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@+id/spinner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meter"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FCFCFC"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="1"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="2"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="3"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="4"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:onClick="onClick"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="6"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="7"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="8"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="36dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="9"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="⬆⬇"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:onClick="onClick"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    app:cornerRadius="@dimen/_36sdp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="#FBF8E4"
                    android:text="."
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_32ssp"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/_36sdp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCFCFC"
            android:orientation="vertical">

            <Button
                android:id="@+id/button13"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:onClick="onClick"
                android:backgroundTint="#FBF8E4"
                android:text="AC"
                android:textColor="#2962FF"
                android:textSize="@dimen/_32ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_36sdp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:onClick="onClick"
                android:backgroundTint="#FBF8E4"
                android:text="⌫"
                android:textColor="#2962FF"
                android:textSize="@dimen/_32ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_36sdp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>